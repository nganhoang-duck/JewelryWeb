@model Shop.Model.Entities.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-section breadcrumb-bg">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 offset-lg-2 text-center">
				<div class="breadcrumb-text">
					<p>Luxurious Jewelry</p>
					<h1>Register</h1>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="authincation">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6">
                <div class="authincation-content">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="auth-form">
                                <h4 class="text-center mb-4">Sign up your account</h4>
                                <form action="/Account/Register" method="post">
                                    <div class="form-group">
                                        <label asp-for="@Model.Email" class="mb-1"><strong>Email</strong>
                                            <span class="text-danger"> (*)</span></label>
                                        <input asp-for="@Model.Email" type="email" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Username" class="mb-1"><strong>Username</strong>
                                            <span class="text-danger"> (*)</span></label>
                                        <input asp-for="@Model.Username" type="text" class="form-control" required>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="@Model.Password" class="mb-1"><strong>Password</strong>
                                            <span class="text-danger"> (*)</span></label>
                                        <input asp-for="@Model.Password" type="password" class="form-control" required>
                                    </div>
                                    <div class="text-center mt-4">
                                        <button type="submit" class="boxed-btn">Sign Up</button>
                                    </div>
                                </form>
                                <div class="new-account mt-3">
                                    <p>Already have an account? <a class="text-primary" href="/Account/Login">Sign in</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


